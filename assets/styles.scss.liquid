// Colors
$light-gray: #E0E0E0;
$dark-gray: #9E9E9E;
$black: #010101;
$light-black: #484849;

// Mixins
    //Breakpoints
$small: 575.98px;
$medium: 767.98px;
$large: 1024.98px;
$xlarge: 1199.98px;

@mixin responsive ($size){
    @if $size==small {
        @media only screen and (max-width: $small) {
            @content;
          }
    }
    @if $size==medium {
        @media only screen and (max-width: $medium) {
          @content;
        }
      }
    @if $size==large {
        @media only screen and (max-width: $large) {
          @content;
        }
      }
    @if $size==xlarge {
        @media only screen and (max-width: $xlarge) {
          @content;
        }
      }
}

// Global styling
button:focus,
.focus\:text-black:focus{
    outline: none;
}

.rounded-1{
    border-radius: 1.1rem;
}

body{
    font-family: 'Montserrat', sans-serif;
    background: #F6F6F6;
}
// Buttons
.btn_primary{
    background-color: $light-black;
    transition: 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
    border: 1px solid $light-black;
    color: #fff;

    &:hover{
        background-color: transparent;
        border: 1px solid $light-black;
        color: $black;
    }
}

.btn_secondary{
    background-color: $light-gray;
    transition: 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
    border: 1px solid $light-gray;

    &:hover{
        background-color: transparent;
        border: 1px solid $light-gray;
        color: #fff;
    }
}

.btn_tertiary{
    background-color: transparent;
    transition: 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
    border: 1px solid $light-black;
    cursor: pointer;

    &:hover{
        background-color: $light-black;
        border: 1px solid $light-black;
        color: #fff;
    }
}

// Input btn reset
input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}



// Header / Navigation bar
.main_header{
    {% assign icon_size = {{settings.icon_size}}%}
    .lnr{
        width: {{icon_size}}px;
        height: {{icon_size}}px;
    }

    @include responsive(large){
        .dropdown_wrapper{
            .dropdown_links{
                width: calc(100% - 3rem);
                position: relative;
                margin-left: 3rem;
            }
        }
    }
}
// Image with text
