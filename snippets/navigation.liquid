<header class="main_header">
  <nav
    :class="{ 'shadow-lg bg-white' : isOpen , 'bg-white' : !isOpen}"
    @keydown.escape="isOpen = false"
    class="relative flex items-center justify-between flex-wrap p-6 fixed w-full z-10 top-0"
    x-data="{ isOpen: false }"
  >
    <!--Logo -->
    <div class="flex items-center flex-shrink-0 text-black mr-6">
      <a class="text-black no-underline hover:no-underline" href="#">
          {% if section.settings.logo_image != blank %} 
              <img src="{{ section.settings.logo_image | img_url: '50x' }}" alt="">
              {% else %}
              <span class="text-2xl pl-2">
              {{section.settings.logo_text}}</span
              >
          {% endif %}
      </a>
    </div>
  
    <!--Toggle button (hidden on large screens)-->
    <button
      :class="{ 'transition transform-180': isOpen }"
      @click="isOpen = !isOpen"
      class="block lg:hidden px-2 text-black focus:outline-none-none focus:text-black"
      type="button"
    >
      <svg
        class="h-6 w-6 fill-current"
        viewbox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          clip-rule="evenodd"
          d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
          fill-rule="evenodd"
          x-show="isOpen"
        />
        <path
          d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
          fill-rule="evenodd"
          x-show="!isOpen"
        />
      </svg>
    </button>
  
    <!--Menu-->
    <div
      :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
      @click.away="isOpen = false"
      class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
      x-show.transition="true"
    >
      <ul
        class="pt-6 lg:pt-0 list-reset lg:flex justify-center flex-1 items-center"
      >
        {% for link in linklists[section.settings.main_linklist].links %}
        <!-- normal links without dropdown -->
        {% if link.links == blank %}
        <li class="mr-3">
          <a
            @click="isOpen = false"
            class="inline-block py-2 px-4 text-black no-underline"
            href="{{ link.url }}"
            >{{ link.title }}
          </a>
        </li>
        {% endif %}
        <!-- Dropdown Menu -->
        {% if link.links != blank %}
        <div x-data="{toggle: false}" class="dropdown_wrapper">
          <button class="mr-3 focus:outline-none" @click="toggle = true">
            <span
              class="inline-block py-2 px-4 text-black no-underline"
            >
              {{ link.title }}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" :class="{'rotate-180': toggle}" class="ml-1 transform inline-block fill-current text-gray-500 w-6 h-6"><path fill-rule="evenodd" d="M15.3 10.3a1 1 0 011.4 1.4l-4 4a1 1 0 01-1.4 0l-4-4a1 1 0 011.4-1.4l3.3 3.29 3.3-3.3z"/></svg>
          </span>
          </button>
          <ul
          style="background-color: {{settings.dropdown_bg}}"
          class="absolute mt-2 shadow rounded w-1/6 text-black dropdown_links"
          x-show="toggle"
          @click.away="toggle = false"
          x-transition:enter="transition-transform transition-opacity ease-out duration-200"
          x-transition:enter-start="opacity-0 transform -translate-y-2"
          x-transition:enter-end="opacity-100 transform translate-y-0"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-end="opacity-0 transform -translate-y-3"
          >
            {% for sublink in link.links %}
            <li class="transition duration-400 ease-in-out hover:bg-gray-100">
              <a
                @click="isOpen = false"
                class="inline-block py-2 px-4 text-black no-underline w-full"
                href="{{ sublink.url }}"
                >{{ sublink.title }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %} {% endfor %}
      </ul>
  
      <ul class="pt-6 lg:pt-0 flex justify-start list-reset lg:flex lg:justify-end items-center ">
        <div x-data="{toggle: false}">
          <button class="mr-3 focus:outline-none" @click="toggle = true">
            <span
              class="inline-block py-2 px-4 text-black no-underline"
            >
            {% if settings.user_icon != blank %}
              <svg class="lnr lnr-{{settings.user_icon}}"><use xlink:href="#lnr-{{settings.user_icon}}"></use></svg>
            {% endif %}
          </span>
          </button>
          <ul
          style="background-color: {{settings.dropdown_bg}}"
          class="absolute shadow rounded w-24 text-black"
          x-show="toggle"
          @click.away="toggle = false"
          x-transition:enter="transition-transform transition-opacity ease-out duration-200"
          x-transition:enter-start="opacity-0 transform -translate-y-2"
          x-transition:enter-end="opacity-100 transform translate-y-0"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-end="opacity-0 transform -translate-y-3"
          >
            <li class="transition duration-400 ease-in-out hover:bg-gray-100">
              <a
                @click="isOpen = false"
                class="inline-block py-2 px-4 text-black no-underline"
                href="#"
                >Profile
              </a>
            </li>
            <li class="transition duration-400 ease-in-out hover:bg-gray-100">
              <a
                @click="isOpen = false"
                class="inline-block py-2 px-4 text-black no-underline"
                href="#"
                >Settings
              </a>
            </li>
            <li class="transition duration-400 ease-in-out hover:bg-gray-100">
              <a
                @click="isOpen = false"
                class="inline-block py-2 px-4 text-black no-underline"
                href="#"
                >Signout
              </a>
            </li>
          </ul>
        </div>
        <li class="mr-3">
          <a
            @click="isOpen = false"
            class="inline-block text-gray-600 no-underline py-2 px-4"
            href="#"
            >
            {% if settings.cart_icon != blank %}
              <svg class="lnr lnr-{{settings.cart_icon}}"><use xlink:href="#lnr-{{settings.cart_icon}}"></use></svg>
            {% endif %}
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>