{% if collection.products_count > 1 %}
    <h2 class="my-8 text-2xl font-bold tracking-wide">{{collection.title | remove: '<br>'}}</h2>
    <div class="container mx-auto">
        <div class="product-lists">
            <div class="container mx-auto">
                <div class="heading_wrapper">
                    <h1 class="my-8 text-2xl font-bold tracking-wide">
                        {{ section.settings.heading }}
                    </h1>
                </div>
                <div class="products_wrapper flex flex-wrap -mx-2">
                    {% for product in collection.products %}
                        <div class="w-full md:w-1/3 px-2 py-2">
                            <div class="image_wrapper">
                                {% for image in product.images limit: 1 %}
                                    <img src="{{ image.src | product_img_url: 'master' }}" class="rounded-t-lg shadow-sm" alt=""/>
                                {% endfor %}
                            </div>
                            <div class="bg-white product_footer p-2 rounded-b-lg shadow-sm">
                                <h2 class="py-2 text-2xl font-semibold">{{ product.title }}</h2>
                                <p class="text-gray-600 text-sm">
                                    {{ product.description | truncatewords: 10 }}
                                </p>
                                <div class="flex justify-between my-4 mx-6 w-full">
                                    <span class="text-lg font-bold tracking-normal">{{
                product.price | money
              }}</span>
                                    <a href="{{ product.url }}" class="btn_primary text-sm text-black font-bold py-2 px-4 rounded-sm">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% else %}

    <h2 class="my-8 text-2xl font-bold tracking-wide text-center">Sorry, there are currently no products in this section.</h2>

{% endif %}
